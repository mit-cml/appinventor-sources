<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AI_AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AI_AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
  <style name="AI_AppTheme" parent="AI_AppBaseTheme">
    <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:textViewStyle">@style/AI_RobotoTextViewStyle</item>
    <item name="android:buttonStyle">@style/AI_RobotoButtonStyle</item>
  </style>

  <style name="AI_RobotoTextViewStyle" parent="android:Widget.TextView">
    <item name="android:fontFamily">sans-serif-light</item>
  </style>

  <style name="AI_RobotoButtonStyle" parent="android:Widget.Holo.Button">
    <item name="android:fontFamily">sans-serif-light</item>
  </style>

  <style name="AI_CustomAlertDialog" parent="@android:style/Theme.Dialog">
    <item name="android:background">@color/black</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:windowBackground">@color/dark_red_background</item>
  </style>

</resources>
