<!--          visible="{hasWriteAccess}" >-->
<!--        <actions:SetFontRegularAction/>-->
<!--      </ai:DropDownItem>-->
<!--      <ai:DropDownItem name="AppStoreSettings" caption="{messages.appStoreSettingsMenuTitle}">-->
<!--        <actions:ShowAppStoreSettingsDialog />-->
<!--      </ai:DropDownItem>-->
