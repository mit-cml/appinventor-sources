<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             ui:generatedFormat="com.google.gwt.i18n.server.PropertyCatalogFactory"
             ui:generatedKeys="com.google.gwt.i18n.server.keygen.MethodNameKeyGenerator"
             ui:generateLocales="default">
    <ui:with field="messages" type="com.google.appinventor.client.OdeMessages"/>

    <g:FlowPanel styleName="design-tab-bar">
        <g:FocusPanel ui:field="paletteTab" styleName="design-tab-button">
            <g:FlowPanel styleName="tab-content">
                <g:Label styleName="tab-label" text="Palette"/>
            </g:FlowPanel>
        </g:FocusPanel>

        <g:FocusPanel ui:field="componentsTab" styleName="design-tab-button">
            <g:FlowPanel styleName="tab-content">
                <g:Label styleName="tab-label" text="Components"/>
            </g:FlowPanel>
        </g:FocusPanel>

        <g:FocusPanel ui:field="propertiesTab" styleName="design-tab-button">
            <g:FlowPanel styleName="tab-content">
                <g:Label styleName="tab-label" text="Properties"/>
            </g:FlowPanel>
        </g:FocusPanel>
    </g:FlowPanel>
</ui:UiBinder>
