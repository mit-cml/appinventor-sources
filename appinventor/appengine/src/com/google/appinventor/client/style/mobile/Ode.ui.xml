<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:mob="urn:import:com.google.appinventor.client.style.mobile"
             xmlns:ed="urn:import:com.google.appinventor.client.editor.youngandroid"
             xmlns:box="urn:import:com.google.appinventor.client.boxes"
             xmlns:ode="urn:import:com.google.appinventor.client"
             xmlns:Ui="urn:ui:com.google.gwt.uibinder">
    <Ui:with field="style" />
    <g:FlowPanel ui:field="rootPanel" styleName="ode-MobileRoot">
        <mob:TopPanelMob ui:field="topPanel" />
        <g:FlowPanel styleName="ode-TutorialWrapper ode-MainContent" ui:field="overDeckPanel">
            <ed:TutorialPanel ui:field="tutorialPanel" width="100%" height="100%" visible="false" />
            <g:DeckPanel ui:field="deckPanel" animationEnabled="true" styleName="ode-DeckPanel">
                <g:FlowPanel width="100%" >
                    <box:ProjectListBox width="100%" ui:field="projectListbox" styleName="ode-MobileProjectList" />
                    <mob:ProjectToolbarMob ui:field="projectToolbar" styleName="ode-BottomNavBar" />
                </g:FlowPanel>
                <g:FlowPanel styleName="ode-ProjectEditor" >
                    <mob:DesignToolbarMob ui:field="designToolbar" />
                    <g:FlowPanel ui:field="workColumns" styleName="ode-WorkColumns">
                        <box:PaletteBox width="100%" ui:field="paletteBox"  addStyleNames="ode-Hidden"/>
                        <box:ViewerBox ui:field="viewerBox"/>
                        <g:FlowPanel ui:field="structureAndAssets">
                            <box:SourceStructureBox ui:field="sourceStructureBox"  addStyleNames="ode-Hidden"/>
                            <box:BlockSelectorBox  addStyleNames="ode-Hidden" />
                            <box:AssetListBox ui:field="assetListBox"  addStyleNames="ode-Hidden" />
                        </g:FlowPanel>
                        <box:PropertiesBox ui:field="propertiesBox" width="222px" addStyleNames="ode-Hidden"/>
                        <ed:ConsolePanel ui:field="consolePanel" height="100%" visible="false" />
                    </g:FlowPanel>
                    <g:FlowPanel>
                        <mob:MobileSidebar ui:field="mobileSideBar">
                            <!-- content will be added here dynamically-->
                        </mob:MobileSidebar>
                    </g:FlowPanel>
                    <mob:DesignTabBarMob ui:field="designTabBar" styleName="ode-BottomNavBar align" />
                    <mob:BlockTabBarMob ui:field="blockTabBar" styleName="ode-BottomNavBar align" />
                </g:FlowPanel>
                <g:FlowPanel width="100%" visible="false">
                    <box:AdminUserListBox />
                </g:FlowPanel>
            </g:DeckPanel>
        </g:FlowPanel>
        <ode:StatusPanel ui:field="statusPanel" visible="false" />
    </g:FlowPanel>
</ui:UiBinder>